<%= simple_form_for @restaurant do |f| %>
<%= f.input :name %>
<%= f.input :address %>
<%= f.input :phone_number %>
<%= f.input :category, collection: [['chinese', 'chinese'], ['italian', 'italian'], ['japanese', 'japanese'], ['french', 'french'], ['belgian', 'belgian']], prompt: "Choose one" %>
<%= f.submit "ADD", class: "btn btn-primary" %>
<% end %>
